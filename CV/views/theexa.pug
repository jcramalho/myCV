extends layout

block content
  .w3-row
    include pinfo.pug

    // ------------------- PAGE CONTENT --------------------------------
    .w3-col.m8.l9
      // Navbar
      .w3-container.w3-bar.w3-border.w3-deep-purple
        a.w3-bar-item.w3-button.w3-margin.w3-round.w3-hover-light-grey(href="/") Home
        a.w3-bar-item.w3-button.w3-margin.w3-round.w3-hover-light-grey(href="/projs") Projects
        a.w3-bar-item.w3-button.w3-margin.w3-round.w3-hover-light-grey(href="/pubs") Publications
        a.w3-bar-item.w3-button.w3-margin.w3-round.w3-hover-light-grey(href="/comms") Communications
        a.w3-bar-item.w3-button.w3-margin.w3-round.w3-hover-light-grey(href="/thesup") Supervisions
        a.w3-button.w3-bar-item.w3-margin.w3-round.w3-hover-light-grey(href="/courses") Courses
        a.w3-bar-item.w3-button.w3-margin.w3-round.w3-hover-light-grey(href="/theexa") Juris
      // Header
      header.w3-container
        h1
           b Juris
      .w3-container 
        table.w3-table-all.display(id="listaRegistos")
            thead
                tr
                    th Aluno
                    th Instituição/Curso
                    th Título
                    th Data
            tbody
                each j in juriList
                    tr
                        td= j.student.name
                        if j.inst
                            td= j.inst
                        else 
                            td --- 
                        td= j.document.title
                        td= j.date
  .w3-row
    footer.w3-container.w3-deep-purple
        address Gerado por myCV :: jcr :: #{d}
    