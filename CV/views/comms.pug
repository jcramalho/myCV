            a.w3-padding(href="/theexa") Juris
  
      .w3-container
        a.w3-hover-white.w3-hover-text-indigo.w3-show-inline-block(href="#")
          i.fa.fa-facebook-official
        a.w3-hover-white.w3-hover-text-blue.w3-show-inline-block(href="#")
          i.fa.fa-linkedin

    // ------------------- PAGE CONTENT --------------------------------
    .w3-col.m8.l9
      // Header
      header.w3-container
        h1
           b Communications
      .w3-container 
        table.w3-table-all.display(id="listaRegistos")
            thead
                tr
                    th Data
                    th Título
                    th Evento 
                    th Local
            tbody
                each c in commsList
                    tr
                        if c.date.year && c.date.month && c.date.day
                            td= c.date.year + "-" + c.date.month + "-" + c.date.day
                        else if c.date.year && c.date.month
                            td= c.date.year + "-" + c.date.month
                        else 
                            td= c.date.year
                        td= c.title
                        td= c.event
                        td= c.place
  .w3-row
    footer.w3-container.w3-deep-purple
        address Gerado por myCV :: jcr :: 2023-Fevereiro
    