        h4.w3-padding-0
          b José Carlos L. Ramalho
        p.w3-text-grey Prof. Auxiliar
        p.w3-text-grey Department of Informatics // Algoritmi Research Center
        p.w3-text-grey University of Minho
        p.w3-text-grey Campus de Gualtar 4700-057 Braga - Portugal
        p.w3-text-grey Phone: +351 253 604479 | FAX: +351 253 604471 | Ext.: 604479
        p.w3-text-grey Orcid: 0000-0002-8574-1574
        p.w3-text-grey jcr @ di.uminho.pt | 
          a(href="http://www.di.uminho.pt/~jcr/") http://www.di.uminho.pt/~jcr/

        .w3-container.w3-border-top
          p
            a.w3-bar-item.w3-button.w3-margin.w3-round.w3-hover-light-grey(href="/projs") Projects
          p 
            a.w3-padding.w3-text-teal(href="/pubs") Publications
          p 
            a.w3-padding.w3-text-teal(href="/comms") Communications
          p
            a.w3-padding(href="/thesup") Supervisions 
