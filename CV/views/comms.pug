            tbody
                each c in commsList
                    tr
                        if c.date.year && c.date.month && c.date.day
                            td= c.date.year + "-" + c.date.month + "-" + c.date.day
                        else if c.date.year && c.date.month
                            td= c.date.year + "-" + c.date.month
                        else 
                            td= c.date.year
